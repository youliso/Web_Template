{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "inlineSources": false,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "target": "ES2019",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
